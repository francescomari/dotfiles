[user]
	name = Francesco Mari
[alias]
	ls = !git --no-pager log --pretty=oneline --abbrev-commit -20
[push]
	default = simple
	autoSetupRemote = true
[color]
	ui = auto
[pull]
	rebase = true
[init]
	defaultBranch = main
[include]
	path = .gitconfig.inc
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
