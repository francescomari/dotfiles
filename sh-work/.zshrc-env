#!/usr/bin/env bash

# Node version manager
eval "$(fnm env --use-on-cd)"

# Direnv
eval "$(direnv hook zsh)"

# Kubernetes aliases
alias k="kubectl"
alias kc="kubectx"
alias kn="kubens"

# Private modules
export GOPRIVATE=github.com/adobe

# Load credentials, if provided.
if [ -f "$HOME/credentials.sh" ] ; then
    # shellcheck disable=SC1091
    . "$HOME/credentials.sh"
fi

