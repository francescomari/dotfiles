<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <profiles>
        <profile>
            <id>adobe</id>

            <activation>
                <property>
                    <name>env.MAVEN_PROFILE</name>
                    <value>adobe</value>
                </property>
            </activation>

            <repositories>
                <repository>
                    <id>artifactory-corp</id>
                    <name>Adobe Artifactory Repository</name>
                    <url>https://artifactory.corp.adobe.com/artifactory/maven-aem-dev</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
                 <repository>
                    <id>artifactory-eaas-releases</id>
                    <name>EaaS Repository</name>
                    <url>https://artifactory-uw2.adobeitc.com/artifactory/maven-eaas-release</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>

            <pluginRepositories>
                <pluginRepository>
                    <id>artifactory-corp</id>
                    <name>Adobe Artifactory Repository</name>
                    <url>https://artifactory.corp.adobe.com/artifactory/maven-aem-dev</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>never</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>

    <servers>
        <server>
            <id>artifactory-corp</id>
            <username>${env.ARTIFACTORY_CORP_USERNAME}</username>
            <password>${env.ARTIFACTORY_CORP_PASSWORD}</password>
        </server>
        <server>
            <id>ossrh</id>
            <username>${env.SONATYPE_OSS_USERNAME}</username>
            <password>${env.SONATYPE_OSS_PASSWORD}</password>
        </server>
        <server>
            <id>artifactory-eaas-releases</id>
            <username>${env.ARTIFACTORY_UW2_USERNAME}</username>
            <password>${env.ARTIFACTORY_UW2_PASSWORD}</password>
        </server>
    </servers>

    <pluginGroups>
        <pluginGroup>org.sonatype.plugins</pluginGroup>
        <pluginGroup>com.day.jcr.vault</pluginGroup>
        <pluginGroup>org.apache.sling</pluginGroup>
        <pluginGroup>com.adobe.livecycle</pluginGroup>
        <pluginGroup>com.adobe.granite</pluginGroup>
    </pluginGroups>
</settings>
